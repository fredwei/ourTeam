/**app.wxss**/
@import 'style/weui.wxss';

page{
    background-color: #fdfdfd;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.weui-cells{
  margin-top: 15rpx;
}

.nav-btn{
  display: inline-block;
}

.page-foot{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #ccc;

  text-align: right;
}
.page-foot .info{
  position: absolute;
  top: 15rpx;
  left: 10rpx;

  font-size: 24rpx;
  color: #999;
  text-align: left;
}
.page-foot .weui-btn{
  margin-right: 10rpx;
}


.table-list{
  border-top: 1px solid rgba(0, 0, 0, .1);
  width: 100%;
  background: #FFF;
}

.table-list .weui-flex{
  padding: 15rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, .1);

  font-size: 26rpx;
  text-align: center;
}
.table-list .weui-flex__item.yellow{
  background-color: #ff0;
}
.table-list .weui-flex__item.red{
  color: #f00;
}
.table-list .list-title{
  position: relative;
  height: 70rpx;
}
.table-list .list-title .weui-cells__title{
  font-size: 30rpx;
  color: #007AFF;
  font-weight: bold;
  letter-spacing: .1em;
}
.table-list .list-title .tips{
  display: block;
  line-height: 1.4;
  font-size: 22rpx;
  color: #888;
  font-weight: normal;
  letter-spacing: 0;
}
.table-list .list-title .weui-btn-box{
  position: absolute;
  top: 5rpx;
  right: 10rpx;
}
.table-list .list-title .weui-btn{
  margin-top: 0;
  margin-left: 10rpx;
}

.table-list .list-form{
  margin-top: 0;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.table-list .list-head{
  background-color: #f3f3f3;
}
.table-list .weui-flex__item .weui-btn{
  display: block;
  margin: 10rpx 5px;
  white-space: nowrap;
}
.table-list .weui-flex__item .weui-btn:first-child{
  margin-top: 0;
}
.table-list .weui-flex__item .weui-btn:last-child{
  margin-bottom: 0;
}

.filter-total{
  padding: 15rpx 0;
  background-color: #fff;
  text-align: center;
  font-size: 14px;
}
.filter-total .weui-btn{
  display: block;
  width: 70%;
  line-height: 2;
  white-space: nowrap;
}
.filter-head{
  padding: 15rpx 0;
  background-color: #f3f3f3;
  text-align: center;
  font-size: 14px;
}
.filter-btn image{
  width: 40rpx;
  height: 20rpx;
}



.c-success{
  color: #6c0;
}
.c-warn{
  color: #fc0;
}
.c-error{
  color: #f30;
}

.b-success{
  background-color: #6c0;
}
.b-warn{
  background-color: #fc0;
}
.b-error{
  background-color: #f30;
}